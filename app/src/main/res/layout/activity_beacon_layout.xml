<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BeaconAc"
    android:background="@color/White">



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/beacon_image"
            android:layout_gravity="center_horizontal"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:src="@drawable/estimote_logo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Black" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Etat de la connection :"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/White" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etat_connection"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/White"
                android:clickable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UUID : "
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/Black"
                android:layout_gravity="bottom" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beacon_uuid"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/Black"
                android:clickable="false"
                android:nestedScrollingEnabled="true"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Major : "
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/White"
                android:layout_gravity="bottom" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beacon_major"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/White"
                android:layout_gravity="bottom"
                android:inputType="number"
                android:textIsSelectable="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/White">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minor : "
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/Black"
                android:layout_gravity="bottom" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beacon_minor"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/Black"
                android:layout_gravity="bottom"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TxPower : "
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/White"
                android:layout_gravity="bottom"
                android:background="@color/Black" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beacon_tx_power"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/White"
                android:layout_gravity="bottom"
                android:inputType="numberSigned" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/White">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rssi : "
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/Black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beacon_rssi"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/Black" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niveau de batterie : "
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/White" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beacon_batterie"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/White" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/White" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FrÃ©quence : "
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/Black"
                android:layout_gravity="bottom" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beacon_frequence"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/Black"
                android:layout_gravity="bottom"
                android:inputType="number" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>